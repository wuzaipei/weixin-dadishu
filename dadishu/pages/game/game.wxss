/* pages/game/game.wxss */
.game{
  width: 750rpx;
  height: 100vh;
}

.gameBg{
  width: 750rpx;
  height: 100vh;
  position: absolute;
  left: 0;
  top: 0;
}
.clock>image{
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  left: 30rpx;
  top: 20rpx;
}

.share>image{
  width: 100rpx;
  height: 160rpx;
  position: absolute;
  right: 30rpx;
  top: 0rpx;
}
.mice{
  width: 750rpx;
  height: 750rpx;
  position: absolute;
  left: 0;
  bottom: 50rpx;
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
}

.mice image{
  width: 25vw;
  height: 25vw;
}


.gameText{
  width: 750rpx;
  text-align: center;
  height: 200rpx;
  line-height: 200rpx;
  position: absolute;
  left: 0;
  top: 200rpx;
}

.gameText>.count{
  display: inline;
  font-size: 70px;
  color: pink;
}

.time{
  position: absolute;
  left:150rpx;
  top:50rpx;
  font-size: 28rpx;
}
.time>text{
  color: pink;
  font-size: 50rpx;
}


