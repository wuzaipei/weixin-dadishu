/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  width: 40vw;
  height: 6vh;
  text-align: center;
  line-height: 6vh;
  background: #ccc;
  animation: btn 1s infinite alternate;
}
@keyframes btn{
  0%{
    filter: brightness(1)
  }
  100%{
    filter: brightness(1.2)
  }
}
